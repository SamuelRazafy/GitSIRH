<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign1="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Class="Interface_bienvenue.InterfaceAdmin"
        mc:Ignorable="d"
        Title="InterfaceAdmin" Height="800" Width="1293"

        ResizeMode="NoResize"  WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized" Language="fr-fr">
    <Window.Resources>
        <!-- DataGrid style -->
        <Style x:Key="DataGridStyle1" TargetType="{x:Type DataGrid}">
            <Setter Property="ColumnHeaderStyle" Value="{DynamicResource ColumnHeaderStyle1}"/>
        </Style>
        <!-- DataGridColumnHeader style -->
        <Style x:Key="ColumnHeaderStyle1" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontSize" Value="18" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="ToolTip" Value="Click to sort."/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid RenderTransformOrigin="0.518,0.041" Margin="00,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270*"/>
            <ColumnDefinition Width="1042*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <!--Panel Bouton Sisiny-->

        <Grid x:Name="sidePanel" Background="#003F9A" HorizontalAlignment="Left" RenderTransformOrigin="0.504,0.534" VerticalAlignment="Center" Grid.ColumnSpan="2">
            <StackPanel x:Name="logoPanel" Margin="0,0,0,702"/>
            <StackPanel Margin="0,191,0,0">
                <Button x:Name="btTableaudeBord" FontFamily="Segoe UI" FontSize="14" Height="49" Margin="0,8,0,0" Foreground="White" BorderBrush="Transparent" Background="Transparent" HorizontalAlignment="Left"  Click="btTableaudeBord_Click" Width="291">

                    <StackPanel Orientation="Horizontal" Width="199">
                        <Image Source="icones/dashboard.png" Height="35" VerticalAlignment="Center" Width="35" Margin="10,0,0,0" />
                        <TextBlock Margin="15 0 0 0" Text="TABLEAU DE BORD" FontSize="14" VerticalAlignment="Center" Width="149"/>
                    </StackPanel>

                </Button>

                <Button x:Name="btGestionConge" FontFamily="Sego UI" FontSize="16" Height="49" Foreground="White" BorderBrush="Transparent" Background="Transparent" Click="btGestionConge_Click" Margin="0,8,0,0" >

                    <StackPanel Orientation="Horizontal" Width="221">
                        <Image Source="icones/conge.png" Height="31" VerticalAlignment="Center" Width="50" Margin="20,0,0,0" HorizontalAlignment="Left" />
                        <TextBlock Margin="0,0,0,0" Text="DEMANDES DE CONGE" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    </StackPanel>

                </Button>
                <Button x:Name="btGestionProjets" FontFamily="Sego UI" FontSize="14" Height="49" Margin="0,8,0,0" Foreground="White" BorderBrush="Transparent" Background="Transparent" Click="btGestionProjets_Click" Width="270">

                    <StackPanel Orientation="Horizontal" Width="205">
                        <Image Source="icones/projets.png" Height="39" VerticalAlignment="Center" Width="54" Margin="0,0,0,0" />
                        <TextBlock Margin="5,0,0,0" Text="GESTION DE PROJETS" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    </StackPanel>

                </Button>
                <Button x:Name="btDemandeInscription" FontFamily="Sego UI" FontSize="14" Height="49" Margin="0,8,0,0" Foreground="White" BorderBrush="Transparent" Background="Transparent"  Width="272" Click="btDemandeInscription_Click">

                    <StackPanel Orientation="Horizontal" Width="242" Margin="10,0,0,0">
                        <Image Source="icones/signing.png" Height="48" VerticalAlignment="Center" Width="35" Margin="15,0,0,0" />
                        <TextBlock Margin="10,10,0,0" Text="DEMANDES D'INSCRIPTION" FontSize="14" VerticalAlignment="Center" Width="175" FontFamily="Segoe UI"/>
                    </StackPanel>

                </Button>

                <!--Panel Parametre -->



                <!--Bt Paie-->

                <Button x:Name="btPaie"  FontFamily="Sego UI" FontSize="14" Height="49" Foreground="White" BorderBrush="Transparent" Background="Transparent" Click="btPaie_Click" Margin="0,8,0,0">

                    <StackPanel Orientation="Horizontal" Width="196">
                        <Image Source="icones/paye.png" Height="36" VerticalAlignment="Center" Width="46" Margin="0,0,0,0" RenderTransformOrigin="0.609,0.5" />
                        <TextBlock Margin="5,0,0,0" Text="PAIE" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    </StackPanel>

                </Button>

                <Button x:Name="btOutils"  FontFamily="Sego UI" FontSize="14" Height="48" Foreground="White" BorderBrush="Transparent" Background="Transparent"  Margin="0,8,0,0" Click="btOutils_Click">

                    <StackPanel  Orientation="Horizontal" Width="196" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Image Source="icones/outils.png" Height="36" VerticalAlignment="Center" Width="46" Margin="0,0,0,0" RenderTransformOrigin="0.609,0.5" />
                        <TextBlock Margin="5,0,0,0" Text="PARAMÈTRES" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    </StackPanel>

                </Button>

                <!--Panel Bouton Sisiny Ambany-->

            </StackPanel>
            <Image x:Name="logo" Height="100" Width="100" Margin="82,46,85,654" Source="/MicrosoftTeams-image (3).png"/>
            <Expander HorizontalAlignment="Center" Height="300" Header="EFFECTIF PAR DEPARTEMENT" Margin="0,547,0,0"  VerticalAlignment="Top" Background="Transparent" Foreground="White" Width="300">
                <Grid Background="#003F9A" Height="254">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="btInformatique" FontFamily="Sego UI" FontSize="14" Height="41" Margin="4" Foreground="White" BorderBrush="Transparent" Background="Transparent" Click="btInformatique_Click">

                            <StackPanel Orientation="Horizontal" Height="31" Width="200">
                                <Image Source="icones/computer.png" Height="30" VerticalAlignment="Center" />
                                <TextBlock Margin="15 0 0 0" Text="INFORMATIQUE" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            </StackPanel>

                        </Button>
                        <Button x:Name="btComptabilite" FontFamily="Sego UI" FontSize="14" Height="41" Margin="4" Foreground="White" BorderBrush="Transparent" Background="Transparent" Click="btComptabilite_Click">
                            <StackPanel Orientation="Horizontal" Height="31" Width="200">
                                <Image Source="icones/comptabilite.png" Height="30" VerticalAlignment="Center" />
                                <TextBlock Margin="15 0 0 0" Text="COMPTABILITE" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI" Height="23" Width="138"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btRessourceHumaine" FontFamily="Sego UI" FontSize="14" Height="41" Margin="4" Foreground="White" BorderBrush="Transparent" Background="Transparent" Width="255" Click="btRessourceHumaine_Click">
                            <StackPanel Orientation="Horizontal" Height="41" Width="224">
                                <Image Source="icones/rh.png" Height="30" VerticalAlignment="Center" Margin="10,0,0,0" />
                                <TextBlock Margin="15 0 0 0" Text="RH" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI" Width="146"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btMarketing" FontFamily="Sego UI" FontSize="14" Height="41" Margin="4" Foreground="White" BorderBrush="Transparent" Background="Transparent" Width="255" Click="btMarketing_Click">
                            <StackPanel Orientation="Horizontal" Height="41" Width="224">
                                <Image Source="icones/Marketing.png" Height="30" VerticalAlignment="Center" Margin="10,0,0,0" />
                                <TextBlock Margin="15 0 0 0" Text="MARKETING" FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI" Width="146"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander>
        </Grid>

        <!--Panel Tableau de bord-->

        <StackPanel x:Name="TableauDeBord" Grid.ColumnSpan="2" Margin="37,0,-34,0" Grid.Column="1" d:IsHidden="True">
