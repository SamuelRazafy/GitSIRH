            <Label Content="DEPARTEMENT MARKETING" Width="395" Height="47" FontWeight="Bold" FontSize="24" Foreground="#FF003F9A" Margin="0,30,0,0"/>
            <StackPanel Height="627" HorizontalAlignment="Left" Margin="20,30,0,0" Width="996">
                <DataGrid x:Name="DepartementMarketing" Height="602" FontSize="10" d:ItemsSource="{d:SampleData ItemCount=10}" Width="972" RenderTransformOrigin="0.975,0.600" d:IsHidden="True">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="80" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="80,80,80,80" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="40">
                                        <Border.Background>
                                            <ImageBrush x:Name="imagePdP" Stretch="Fill" ImageSource="{Binding urlPhoto}"/>
                                        </Border.Background>
                                    </Border>
                                </DataTemplate>

                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
