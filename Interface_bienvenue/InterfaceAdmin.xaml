            <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,200">

                <!--Carte Demande de Conge-->

                <materialDesign1:Card  x:Name="CongeCard" Canvas.Left="20" Canvas.Top="10" Height="136" Width="285" Background="White" MouseDown="CardCongeDown" Cursor="Hand" >
                    <Grid Background="#FFEBEBEB">
                        <TextBlock FontSize="18" Foreground="#FF0B408C" FontWeight="Bold" Margin="0,0,0,98" TextAlignment="Center"><Run Text="DEMANDE"/><Run Language="fr-fr" Text="S"/><Run Text=" DE CONGE "/></TextBlock>
                        <TextBlock x:Name="TextBlockDemandeConge" Margin="150,35,78,35" FontSize="36" Foreground="#3a6ea5" FontWeight="Bold" Width="86">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <Image HorizontalAlignment="Left" Height="76" Margin="206,47,0,0" VerticalAlignment="Top" Width="57" Source="/icons8_leave_50px_1.png"/>
                        <TextBlock HorizontalAlignment="Left" Margin="94,106,0,0" TextWrapping="Wrap" Text="RESTANTE(S)" VerticalAlignment="Top" Height="28" Width="121" FontSize="18" FontWeight="Bold" Foreground="#FFFF6700"/>
                    </Grid>
                </materialDesign1:Card>

                <!--Carte Taches-->

                <materialDesign1:Card x:Name="TachesCard" Canvas.Left="350" Canvas.Top="10" Height="136" Width="297" Cursor="Hand" MouseDown="CarteTachesDown" >
                    <Grid Background="#FFEBEBEB">
                        <TextBlock FontSize="18" Foreground="#FF0B408C" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" Height="30" Width="285"><Run Text="TACHE"/><Run Language="fr-fr" Text="S"/></TextBlock>
                        <TextBlock x:Name="TextblockListeTaches" Margin="92,35,78,35" FontSize="36" Foreground="#3a6ea5" FontWeight="Bold" Width="86"/>
                        <Image HorizontalAlignment="Left" Height="75" Margin="212,41,0,0" VerticalAlignment="Top" Width="60" Source="/icons8_rescheduling_a_task_50px.png"/>
                        <TextBlock HorizontalAlignment="Left" Margin="94,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="127" FontSize="18" FontWeight="Bold" Foreground="#FFFF6700"><Run Text="RESTANTE "/><Run Language="fr-fr" Text="(S)"/><Run Text="                                   (S)"/></TextBlock>
                    </Grid>
                </materialDesign1:Card>

                <!--Carte Demande d'Inscription-->

                <materialDesign1:Card x:Name="Carte4" Canvas.Left="690" Canvas.Top="10" Height="136" Width="299" MouseDown="clickCarteDemandeInscription" Cursor="Hand" >
                    <Grid Background="#FFEBEBEB">
                        <TextBlock Text="DEMANDES D'INSCRIPTIONS " FontSize="18" Foreground="#FF0B408C" FontWeight="Bold" Margin="0,0,0,98" TextAlignment="Center"/>
                        <TextBlock x:Name="TextBlockDemandeInscription" Margin="94,35,78,35" FontSize="36" Foreground="#3a6ea5" FontWeight="Bold" Width="86"/>
                        <Image HorizontalAlignment="Left" Height="90" Margin="212,43,0,0" VerticalAlignment="Top" Width="61" Source="/icons8_sign_document_50px.png"/>
                        <TextBlock HorizontalAlignment="Left" Margin="94,106,0,0" TextWrapping="Wrap" Text="RESTANT(S)" VerticalAlignment="Top" Height="28" Width="111" FontSize="18" FontWeight="Bold" Foreground="#FFFF6700"/>
                    </Grid>
                </materialDesign1:Card>

                <!--Partie Carte Projets et Actualites-->

            </Canvas>
            <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">

                <!--Carte Projets -->
                <materialDesign1:Card x:Name="Carte5" Canvas.Left="20" Canvas.Top="24" Height="254" Width="492">
                    <Grid Margin="0,0,0,-146">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="530*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="15*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="PROJETS " FontSize="24" Foreground="#FF0B408C" FontWeight="Normal" TextAlignment="Center" Margin="0,0,0,0" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                        <StackPanel Orientation="Horizontal" Margin="0,69,0,296" Grid.ColumnSpan="3">
                            <TextBlock x:Name="TextBlockVaccination" Text="VACCINATION " FontSize="18" Foreground="#FF0B408C" FontWeight="Normal" TextAlignment="Center" Margin="10,0,0,0" Width="285" Height="25"/>
                            <ProgressBar Height="12" Width="100" Background="Gray"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,90,0,203" Grid.ColumnSpan="3">
                            <TextBlock x:Name="TextBlockDigitalisation" Text="DIGITALISATION " FontSize="18" Foreground="#FF0B408C" FontWeight="Normal" TextAlignment="Center" Margin="5,0,0,0" Width="292" Height="30"/>
                            <ProgressBar Height="13" Width="150" Background="#3a6ea5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,125,0,113" Grid.ColumnSpan="3">
                            <TextBlock x:Name="TextBlockCampagnePublicitaire" Text="CAMPAGNE PUB " FontSize="18" Foreground="#FF0B408C" FontWeight="Normal" TextAlignment="Center" Margin="5,0,0,0" Width="291" Height="29"/>
                            <ProgressBar Height="10" Width="190" Background="#ff6700"/>
                        </StackPanel>

                    </Grid>



                </materialDesign1:Card>

                <!--Carte Actualites-->

                <materialDesign1:Card x:Name="Carte6" Canvas.Left="567" Canvas.Top="24" Height="407" Width="423">
                    <StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0" Height="245">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="/happy birthday.jpg"/>
                            </StackPanel.Background>
                            <TextBlock Text="ACTUALITÉS" FontSize="18" Foreground="White" FontWeight="Bold" TextAlignment="Center" Width="200" Height="30" Margin="125,40,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image HorizontalAlignment="Center" Source="/hbd.png" Width="50" Height="50"  Margin="5,0,0,0"/>
                            <TextBlock x:Name="TextBlockAnniversaire2" FontSize="14" Foreground="#3a6ea5" Text="Aujourd'hui c'est l'anniversaire de Antsa" FontWeight="Bold" TextAlignment="Center" Width="327" Height="44" Margin="0,20,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Image HorizontalAlignment="Center" Source="/baby.png" Width="50" Height="50" Margin="5,0,0,0"/>
                            <TextBlock x:Name="Naissance" FontSize="14" Foreground="#3a6ea5" FontWeight="Bold" Text="Mme Miora a mis au monde un petit Garçon" TextAlignment="Center" Width="327" Height="44" Margin="0,20,0,0"/>
                        </StackPanel>


                    </StackPanel>
                </materialDesign1:Card>
            </Canvas>
        </StackPanel>

        <!--Bouton Close-->

        <Button x:Name="close" Click="close_Click" HorizontalAlignment="Right" Margin="0,19,10,0" Foreground="Black" BorderBrush="White" Background="{x:Null}" BorderThickness="0,0,0,0" Grid.Column="1" Width="52" VerticalAlignment="Top" Height="64">
            <Button.Content>
                <Image HorizontalAlignment="Center" Source="/icons8_export_50px_1.png" Width="30" Height="30"></Image>
            </Button.Content>
        </Button>

        <!--Panel Fiche de Paie-->




        <!--Panel Profil Departement Informatique-->

        <StackPanel x:Name="PanelDepartement_Info" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1094" Height="800" Grid.Column="1" d:IsHidden="True">
            <Label Content="DEPARTEMENT INFORMATIQUE" Width="500" Height="47" FontWeight="Bold" FontSize="24" Foreground="#FF003F9A" Margin="0,30,0,0"/>
            <StackPanel Height="589" HorizontalAlignment="Left" Margin="20,30,0,0" Width="996">
                <DataGrid x:Name="DepartementInformatique" Height="576" FontSize="10" d:ItemsSource="{d:SampleData ItemCount=10}" Width="1014" RenderTransformOrigin="0.975,0.600">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="80" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="80,80,80,80" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="40">
                                        <Border.Background>
                                            <ImageBrush x:Name="imagePdP" Stretch="Fill" ImageSource="{Binding urlPhoto}"/>
                                        </Border.Background>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>



                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="90"/>
                        <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" Width="90"/>
                        <DataGridTextColumn Header="CIN" Binding="{Binding CINEmp}" Width="90"/>
                        <DataGridTextColumn Header="Statut Matrimonial" Binding="{Binding statutMatrimonial}" Width="120"/>
                        <DataGridTextColumn Header="Sexe" Binding="{Binding Sexemp}" Width="90"/>
                        <DataGridTextColumn Header="Date Entrée" Binding="{Binding DateEntree}" Width="90"/>
                        <DataGridTextColumn Header="Fonction" Binding="{Binding Fonction}" Width="90"/>
                        <DataGridTemplateColumn Width="130" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btModifierInfo" Width="80" Background="Green" Content="MODIFIER" FontSize="9" materialDesign:ButtonAssist.CornerRadius="15" Click="btModifierInfo" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="130" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button  x:Name="btSupprimerInfo" Width="80" Background="Red" Content="SUPPRIMER" materialDesign:ButtonAssist.CornerRadius="15" FontSize="9" Click="btSupprimerierInfo" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <materialDesign1:DataGridComboBoxColumn/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>


        </StackPanel>

        <!--Panel Profil Departement RH-->

        <StackPanel x:Name="PanelDepartement_RH" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1019" Height="800" Grid.Column="1" d:IsHidden="True">
            <Label Content="DEPARTEMENT DES RESSOURCES HUMAINES" Width="600" Height="47" FontWeight="Bold" FontSize="24" Foreground="#FF003F9A" Margin="0,30,0,0"/>
            <StackPanel Height="637" HorizontalAlignment="Left" Margin="20,30,0,0" Width="996" d:IsHidden="True">
                <DataGrid x:Name="DepartementRH" Height="581" FontSize="10" d:ItemsSource="{d:SampleData ItemCount=10}" Width="972" RenderTransformOrigin="0.975,0.600" d:IsHidden="True">
                    <DataGrid.Columns>

                        <DataGridTemplateColumn Width="80" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="80,80,80,80" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="40">
                                        <Border.Background>
                                            <ImageBrush x:Name="imagePdP" Stretch="Fill" ImageSource="{Binding urlPhoto}"/>
                                        </Border.Background>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="90"/>
                        <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" Width="90"/>
                        <DataGridTextColumn Header="CIN" Binding="{Binding CINEmp}" Width="90"/>
                        <DataGridTextColumn Header="Statut Matrimonial" Binding="{Binding statutMatrimonial}" Width="120"/>
                        <DataGridTextColumn Header="Sexe" Binding="{Binding Sexemp}" Width="90"/>
                        <DataGridTextColumn Header="Date Entrée" Binding="{Binding DateEntree}" Width="90"/>
                        <DataGridTextColumn Header="Fonction" Binding="{Binding Fonction}" Width="90"/>
                        <DataGridTemplateColumn Width="130" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="modifierDRH" Width="80" Background="Green" Content="MODIFIER" materialDesign:ButtonAssist.CornerRadius="15" FontSize="9" Click="btModifierRh" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="130" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="supprimerDRH" Width="80" Background="Red" Content="SUPPRIMER" materialDesign:ButtonAssist.CornerRadius="15" FontSize="9" Click="supprimerRH" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <materialDesign:DataGridComboBoxColumn/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>


        </StackPanel>

        <!--Panel Profil Departement Comptabilite-->

        <StackPanel x:Name="PanelDepartement_Comptabilite" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1019" Height="800" Grid.Column="1" d:IsHidden="True">
            <Label Content="DEPARTEMENT DE COMPTABILITE " Width="400" Height="47" FontWeight="Bold" FontSize="24" Foreground="#FF003F9A" Margin="0,50,0,0"/>
            <StackPanel Height="581" HorizontalAlignment="Left" Margin="20,30,0,0" Width="996" d:IsHidden="True">
                <DataGrid x:Name="DepartementComptabilite" Height="576" FontSize="10" d:ItemsSource="{d:SampleData ItemCount=10}" Width="972" RenderTransformOrigin="0.975,0.600">
                    <DataGrid.Columns>

                        <DataGridTemplateColumn Width="80" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="80,80,80,80" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="40">
                                        <Border.Background>
                                            <ImageBrush x:Name="imagePdP" Stretch="Fill" ImageSource="{Binding urlPhoto}"/>
                                        </Border.Background>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="90"/>
                        <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" Width="90"/>
